      <a href="https://www.pole-emploi.fr/region/reunion/" target="_blank"><img src="{{asset('img/pole-emploi.png')}}"  class="imgpropos" alt=""></a>
      <a href="https://www.afpa.fr/" target="_blank"><img src="{{asset('img/afpa.jpg')}}"  class="imgpropos" alt=""></a>
      <a href="https://www.francecompetences.fr/" target="_blank"><img src="{{asset('img/fp.jpg')}}"  class="imgpropos" alt=""></a>
    </div>
  
  </section>
